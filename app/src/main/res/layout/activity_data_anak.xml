<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pink_background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataAnakActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/opensansbold"
        android:text="Data Anak"
        android:textColor="@color/primary"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btnslate300"
        android:fontFamily="@font/opensansbold"
        android:text="Selesai"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tambahdata"
        android:layout_width="136dp"
        android:layout_height="39dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/opensansregular"
            android:text="Tambah Data"
            android:textColor="#4B5563"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/img_tambahadata"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/tambah"
            android:layout_marginStart="108dp"
            android:layout_marginTop="10.5dp"
            android:layout_marginBottom="10.5dp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>